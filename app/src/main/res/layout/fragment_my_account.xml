<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#41E5E5E5"
    tools:context=".Fragment.MyAccountFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cartrelative"
        >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:theme="@style/AppTheme"
        app:logo="@drawable/menu_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="My Account"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:textSize="15dp"
            android:text="Log out"/>
    </androidx.appcompat.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/toolbar_account"
            android:background="#053A3333"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/userImage"
            android:layout_below="@+id/toolbar_account"
            android:layout_margin="20dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#053A3333"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/edit_data"
            android:layout_toEndOf="@+id/userEmail"
            android:layout_below="@id/toolbar_account"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:text=""
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/toolbar_account"
            android:layout_toRightOf="@+id/userImage"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmail"
            android:text=""
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_below="@id/userName"
            android:layout_toRightOf="@+id/userImage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editIcon"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/toolbar_account"
            android:layout_toRightOf="@+id/userName"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editProfile"
            android:text="Edit"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            android:layout_below="@id/toolbar_account"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />



        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/icon_order"
            android:textSize="17dp"
            android:layout_below="@+id/userImage"
            android:paddingStart="10dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/title_order"
            android:text="My Orders"
            android:paddingStart="5dp"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/userImage"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_order"
            android:layout_below="@id/userImage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/next_icon_order"
            android:background="#523A3333"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/icon_address"
            android:layout_below="@+id/icon_order"
            android:layout_marginTop="17dp"
            android:textSize="17dp"
            android:paddingStart="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/title_address"
            android:text="My Address"
            android:textSize="14dp"
            android:paddingStart="5dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/icon_order"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_address"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/icon_order"
            android:layout_marginTop="12dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_address"
            android:background="#523A3333"
            />



        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/icon_favourit"
            android:layout_below="@+id/icon_address"
            android:layout_marginTop="17dp"
            android:textSize="17dp"
            android:paddingStart="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/title_favourit"
            android:text="My Favourit"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="5dp"
            android:layout_below="@+id/icon_address"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_favourit"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/icon_address"
            android:layout_marginTop="13dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_favourit"
            android:background="#523A3333"
            />


        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_cart"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title_favourit"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/title_cart"
            android:text="Cart"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_favourit"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            />

        <TextView
            android:id="@+id/icon_cart"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_favourit"
            android:layout_marginTop="12dp"
            android:paddingStart="10dp"
            android:textSize="17dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/title_cart"
            android:background="#203A3333"
            />


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggle_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_cart"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/title_notification"
            android:text="Push Notification"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_cart"
            android:layout_marginTop="22dp"
            android:paddingStart="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_notification"
            android:background="#523A3333"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/title_change"
            android:text="Change Password"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_notification"
            android:layout_marginTop="22dp"
            android:paddingStart="8dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_change"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title_notification"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_change"
            android:background="#523A3333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/title_language"
            android:text="Language"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_change"
            android:layout_marginTop="22dp"
            android:paddingStart="8dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_language"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title_change"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_language"
            android:text="AR"
            android:textSize="14dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/title_change"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            android:layout_toLeftOf="@+id/next_icon_language"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_language"
            android:background="#523A3333"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/title_share"
            android:text="Share App"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_language"
            android:layout_marginTop="18dp"
            android:paddingStart="8dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_share"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title_language"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/title_about"
            android:text="About us"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/icon_order"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/title_share"
            android:layout_marginTop="18dp"
            android:paddingStart="8dp"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/next_icon_about"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/title_share"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title_share"
            android:background="#523A3333"
            android:layout_marginTop="4dp"
            />



    </RelativeLayout>
</FrameLayout>