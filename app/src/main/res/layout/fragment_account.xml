<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/section1"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_bar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:theme="@style/AppTheme"
            app:logo="@drawable/menu_icon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="My Account"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:text="Log out"/>
        </androidx.appcompat.widget.Toolbar>


            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/toolbar_account"
                android:background="#053A3333"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/userImage"
                android:layout_below="@+id/toolbar_account"
                android:layout_margin="20dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#053A3333"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/edit_data"
                android:src="@drawable/edit_profile"
                android:layout_toEndOf="@+id/userName"
                android:layout_below="@id/toolbar_account"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:layout_marginTop="25dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@id/toolbar_account"
                android:layout_toRightOf="@+id/userImage"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userEmail"
                android:text=""
                android:textSize="12dp"
                android:layout_below="@id/userName"
                android:layout_toRightOf="@+id/userImage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editIcon"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@id/toolbar_account"
                android:layout_toRightOf="@+id/userName"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editProfile"
                android:text="Edit"
                android:layout_marginTop="30dp"
                android:textSize="14dp"
                android:layout_below="@id/toolbar_account"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                />


    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/sectionFirst"
        android:layout_below="@+id/section1">
        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/icon_order"
            android:textSize="17dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/title_order"
            android:text="My Orders"
            android:textColor="#000"
            android:paddingStart="5dp"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/next_icon_order"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:paddingTop="12dp"
            android:text="11"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/section2"
        android:layout_below="@+id/section1"
        android:background="#523A3333"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section3"
        android:layout_below="@+id/section2"
        >

        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/icon_address"
            android:textSize="17dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/title_address"
            android:text="My Address"
            android:textColor="#000"
            android:textSize="12dp"
            android:paddingStart="5dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:paddingTop="13dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/next_icon_address"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/section4"
        android:background="#523A3333"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section4"
        android:layout_below="@+id/section3"
        >

        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/icon_favourit"
            android:layout_below="@+id/icon_address"
            android:textSize="17dp"
            android:paddingStart="10dp"
            android:paddingTop="16dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/title_favourit"
            android:text="My Favourit"
            android:textColor="#000"
            android:textSize="12dp"
            android:layout_marginStart="5dp"
            android:paddingStart="5dp"
            android:paddingTop="16dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/next_icon_favourit"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/section3"
        android:background="#523A3333"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section5"
        android:layout_below="@+id/section4"
        >

        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/icon_cart"
            android:paddingStart="10dp"
            android:textSize="17dp"
            android:paddingTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/title_cart"
            android:text="Cart"
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="5dp"
            android:paddingTop="16dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/next_icon_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/section5"
        android:background="#203A3333"
        android:id="@+id/seperator"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:id="@+id/section6"
        android:layout_below="@+id/seperator">

        <TextView
            android:id="@+id/title_notification"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginStart="5dp"
            android:paddingStart="8dp"
            android:text="Push Notification"
            android:textColor="#000"
            android:textSize="12dp"
            android:paddingTop="20dp"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/toggle_button"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            app:on="false"
            app:textOn=""
            app:textOff=""
            app:colorOn="#000"
            app:colorBorder="#000"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/section6"
        android:background="#523A3333"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section7"
        android:layout_below="@+id/section6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/title_change"
            android:text="Change Password"
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="8dp"
            android:paddingTop="18dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/next_icon_change"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/section7"
        android:background="#523A3333"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section8"
        android:layout_below="@+id/section7">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/title_language"
        android:text="Language"
        android:textSize="12dp"
        android:textColor="#000"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="8dp"
        android:paddingTop="18dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_language"
        android:text="AR"
        android:textSize="14dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:id="@+id/next_icon_language"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/section8"
        android:background="#523A3333"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section9"
        android:layout_below="@+id/section8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/title_share"
            android:text="Share App"
            android:textSize="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="8dp"
            android:paddingTop="18dp"
            android:textColor="#000"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/next_icon_share"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/section9"
        android:background="#523A3333"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section10"
        android:layout_below="@+id/section9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/title_about"
            android:text="About us"
            android:textSize="12dp"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="8dp"
            android:paddingTop="18dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/next_icon_about"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:textColor="#493A3333"
            android:textAlignment="viewEnd"
            android:paddingEnd="10dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/section10"
        android:background="#203A3333"
        />
</RelativeLayout>