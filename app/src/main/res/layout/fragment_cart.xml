<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#41E5E5E5"
    tools:context=".Fragment.CartFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/progress_cart"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cartrelative"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:theme="@style/AppTheme"
            app:menu="@menu/home_bar"
            app:logo="@drawable/menu_icon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="Cart" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/toast_emputy"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cart_recycler"
            android:background="#41E5E5E5"
            android:layout_below="@+id/toolbar_cart">
        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBTOTAL"
            android:textStyle="bold"
            android:layout_below="@+id/cart_recycler"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:paddingStart="20dp"
            android:id="@+id/subtotal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="items"
            android:layout_below="@+id/subtotal"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:paddingStart="20dp"
            android:id="@+id/numberOfItems"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 $"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@+id/subtotal"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:textSize="14dp"
            android:paddingStart="20dp"
            android:id="@+id/price_number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shipping"
            android:layout_below="@+id/numberOfItems"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:paddingStart="20dp"
            android:textColor="#000"
            android:id="@+id/shipping_word"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 $"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@+id/numberOfItems"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:textSize="14dp"
            android:paddingStart="20dp"
            android:id="@+id/shipping_number"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/shipping_number"
            android:background="#39000000"
            android:layout_marginTop="20dp"
            android:id="@+id/view_cart"
            >
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_below="@+id/shipping_number"
            android:layout_marginTop="60dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingStart="20dp"
            android:id="@+id/total_word"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 $"
            android:layout_below="@+id/shipping_number"
            android:layout_marginTop="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingStart="20dp"
            android:id="@+id/total_number" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/total_number"
            >
        </RelativeLayout>
    </RelativeLayout>

    </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="#fff"
            android:text="Check Out"
            android:textStyle="bold"
            android:id="@+id/checkout_but"
            android:layout_marginTop="60dp"
            android:background="#000"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</FrameLayout>